<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTheme"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:text="Theme"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/rlOnOffNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="Turn on/off push notify"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ivOnOffNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_on" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlOnOffSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="Turn on/off alert sound"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ivOnOffSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_on" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlOnOffMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="Turn on/off App background music"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ivOnOffMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_on" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvLogOut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:text="LogOut"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvMyAcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/user"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="abcdefgh"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"

        />

</LinearLayout>